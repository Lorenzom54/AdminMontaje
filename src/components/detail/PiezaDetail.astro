---
---
import { FASES } from '../../lib/pieza_api';

interface Props {
  pieza: {
    id: number;
    codigo: string;
    tipo_material: string;
    colada: string;
    fase: number;
    conjunto_id: number;
    chapa_id: number;
    created_at: string;
    conjuntos?: { nombre: string };
    chapas?: { codigo: number };
  };
}

const { pieza } = Astro.props;

// Función para formatear fechas
function formatDate(dateString) {
  if (!dateString) return '-';
  return new Date(dateString).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
---

<div slot="general" class="detail-content">
  <div class="detail-grid">
    <div class="detail-section">
      <h3 class="section-title">Información de la Pieza</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Código</label>
          <div class="info-value editable" data-field="codigo">{pieza.codigo}</div>
        </div>
        <div class="info-item">
          <label class="info-label">ID del Sistema</label>
          <div class="info-value">{pieza.id}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Tipo de Material</label>
          <div class="info-value editable" data-field="tipo_material">{pieza.tipo_material}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Fecha de Creación</label>
          <div class="info-value">{formatDate(pieza.created_at)}</div>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h3 class="section-title">Estado y Relaciones</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Fase</label>
          <div class="info-value">
            <span class={`fase-badge fase-${pieza.fase}`}>
              {FASES[pieza.fase] || 'Desconocida'}
            </span>
          </div>
        </div>
        <div class="info-item">
          <label class="info-label">Colada</label>
          <div class="info-value editable" data-field="colada">{pieza.colada || '-'}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Conjunto</label>
          <div class="info-value">{pieza.conjuntos?.nombre || '-'}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Chapa</label>
          <div class="info-value">{pieza.chapas?.codigo ? `#${pieza.chapas.codigo}` : '-'}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="progress" class="detail-content">
  <div class="progress-section">
    <h3 class="section-title">Estado de la Pieza</h3>
    
    <div class="fase-overview">
      <div class="fase-card">
        <div class="fase-icon corte">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-5-9V3m0 0L8 6m3-3l3 3" />
          </svg>
        </div>
        <div class="fase-details">
          <span class="fase-label">Corte</span>
          <span class="fase-status">{pieza.fase >= 0 ? 'Completado' : 'Pendiente'}</span>
        </div>
      </div>
      
      <div class="fase-card">
        <div class="fase-icon biselado">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="fase-details">
          <span class="fase-label">Biselado</span>
          <span class="fase-status">{pieza.fase >= 1 ? 'Completado' : 'Pendiente'}</span>
        </div>
      </div>
      
      <div class="fase-card">
        <div class="fase-icon montaje">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
        </div>
        <div class="fase-details">
          <span class="fase-label">Montaje</span>
          <span class="fase-status">{pieza.fase >= 2 ? 'Completado' : 'Pendiente'}</span>
        </div>
      </div>
      
      <div class="fase-card">
        <div class="fase-icon soldadura">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="fase-details">
          <span class="fase-label">Soldadura</span>
          <span class="fase-status">{pieza.fase >= 3 ? 'Completado' : 'Pendiente'}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="history" class="detail-content">
  <div class="history-section">
    <h3 class="section-title">Historial de la Pieza</h3>
    
    <div class="history-items">
      <div class="history-item">
        <div class="history-avatar">SYS</div>
        <div class="history-content">
          <div class="history-header">
            <strong>Sistema</strong>
            <span class="history-action">registró pieza</span>
            <span class="history-time">{formatDate(pieza.created_at)}</span>
          </div>
          <p class="history-description">Pieza {pieza.codigo} registrada en el sistema</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="files" class="detail-content">
  <div class="files-section">
    <h3 class="section-title">Documentos de la Pieza</h3>
    
    <div class="files-upload">
      <button class="btn-upload">
        <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Subir Archivo
      </button>
    </div>

    <div class="files-placeholder">
      <div class="placeholder-icon">
        <svg width="48" height="48" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <p>No hay documentos adjuntos</p>
      <span>Sube planos, especificaciones o documentos relacionados con la pieza</span>
    </div>
  </div>
</div>

<style>
  .fase-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .fase-badge.fase-0 {
    background: #fee2e2;
    color: #991b1b;
  }

  .fase-badge.fase-1 {
    background: #fef3c7;
    color: #92400e;
  }

  .fase-badge.fase-2 {
    background: #dbeafe;
    color: #1d4ed8;
  }

  .fase-badge.fase-3 {
    background: #d1fae5;
    color: #065f46;
  }

  .fase-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .fase-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
  }

  .fase-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .fase-icon.corte { background: linear-gradient(135deg, #ef4444, #dc2626); }
  .fase-icon.biselado { background: linear-gradient(135deg, #f59e0b, #d97706); }
  .fase-icon.montaje { background: linear-gradient(135deg, #3b82f6, #2563eb); }
  .fase-icon.soldadura { background: linear-gradient(135deg, #10b981, #059669); }

  .fase-details {
    display: flex;
    flex-direction: column;
  }

  .fase-label {
    font-size: 12px;
    color: #6b7280;
    font-weight: 500;
  }

  .fase-status {
    font-size: 14px;
    font-weight: 600;
    color: #111827;
  }

  .files-placeholder {
    text-align: center;
    padding: 48px 24px;
    color: #6b7280;
  }

  .placeholder-icon {
    margin: 0 auto 16px;
    opacity: 0.5;
  }

  .files-placeholder p {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 8px;
    color: #374151;
  }

  .files-placeholder span {
    font-size: 14px;
    color: #6b7280;
  }
</style>