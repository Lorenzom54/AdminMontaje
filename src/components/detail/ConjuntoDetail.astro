---
interface Props {
  conjunto: {
    id: number;
    codigo: string;
    descripcion: string;
    obra_id: number;
    estado_actual: number;
    estados: Array<string>;
    is_completed: boolean;
    created_at: string;
    obras?: { nombre: string };
  };
}

const { conjunto } = Astro.props;

// Función para formatear fechas
function formatDate(dateString: string) {
  if (!dateString) return '-';
  return new Date(dateString).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
---

<div slot="general" class="detail-content">
  <div class="detail-grid">
    <div class="detail-section">
      <h3 class="section-title">Información del Conjunto</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Código</label>
          <div class="info-value editable" data-field="codigo">{conjunto.codigo}</div>
        </div>
        <div class="info-item">
          <label class="info-label">ID del Sistema</label>
          <div class="info-value">{conjunto.id}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Obra</label>
          <div class="info-value">{conjunto.obras?.nombre || '-'}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Fecha de Creación</label>
          <div class="info-value">{formatDate(conjunto.created_at)}</div>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h3 class="section-title">Estado y Descripción</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Estado Actual</label>
          <div class="info-value">
            <span class="estado-actual-badge">
              {conjunto.estados && conjunto.estado_actual !== null ? conjunto.estados[conjunto.estado_actual] : 'Sin estado'}
            </span>
          </div>
        </div>
        <div class="info-item">
          <label class="info-label">Estado</label>
          <div class="info-value">
            <span class={`status-badge ${conjunto.is_completed ? 'completed' : 'pending'}`}>
              {conjunto.is_completed ? 'Completado' : 'En Progreso'}
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="detail-section full-width">
      <h3 class="section-title">Descripción</h3>
      <div class="info-item">
        <div class="info-value editable" data-field="descripcion">{conjunto.descripcion || 'Sin descripción'}</div>
      </div>
    </div>
  </div>
</div>

<div slot="progress" class="detail-content">
  <div class="progress-section">
    <h3 class="section-title">Estado del Conjunto</h3>
    
    <div class="conjunto-overview">
      <div class="conjunto-card">
        <div class="conjunto-icon status">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="conjunto-details">
          <span class="conjunto-label">Estado</span>
          <span class="conjunto-status">{conjunto.is_completed ? 'Completado' : 'En Progreso'}</span>
        </div>
      </div>
      
      <div class="conjunto-card">
        <div class="conjunto-icon obra">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <div class="conjunto-details">
          <span class="conjunto-label">Obra</span>
          <span class="conjunto-status">{conjunto.obras?.nombre || 'Sin asignar'}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="history" class="detail-content">
  <div class="history-section">
    <h3 class="section-title">Historial del Conjunto</h3>
    
    <div class="history-items">
      <div class="history-item">
        <div class="history-avatar">SYS</div>
        <div class="history-content">
          <div class="history-header">
            <strong>Sistema</strong>
            <span class="history-action">creó conjunto</span>
            <span class="history-time">{formatDate(conjunto.created_at)}</span>
          </div>
          <p class="history-description">Conjunto {conjunto.codigo} registrado en el sistema</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="files" class="detail-content">
  <div class="files-section">
    <h3 class="section-title">Documentos del Conjunto</h3>
    
    <div class="files-upload">
      <button class="btn-upload">
        <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Subir Archivo
      </button>
    </div>

    <div class="files-placeholder">
      <div class="placeholder-icon">
        <svg width="48" height="48" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <p>No hay documentos adjuntos</p>
      <span>Sube planos, especificaciones o documentos relacionados con el conjunto</span>
    </div>
  </div>
</div>

<style>
  .estado-actual-badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
    background: #e5e7eb;
    color: #374151;
  }

  .status-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .status-badge.completed {
    background: #d1fae5;
    color: #065f46;
  }

  .status-badge.pending {
    background: #fef3c7;
    color: #92400e;
  }

  .conjunto-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .conjunto-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
  }

  .conjunto-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .conjunto-icon.status { background: linear-gradient(135deg, #10b981, #059669); }
  .conjunto-icon.obra { background: linear-gradient(135deg, #3b82f6, #2563eb); }

  .conjunto-details {
    display: flex;
    flex-direction: column;
  }

  .conjunto-label {
    font-size: 12px;
    color: #6b7280;
    font-weight: 500;
  }

  .conjunto-status {
    font-size: 14px;
    font-weight: 600;
    color: #111827;
  }

  .files-placeholder {
    text-align: center;
    padding: 48px 24px;
    color: #6b7280;
  }

  .placeholder-icon {
    margin: 0 auto 16px;
    opacity: 0.5;
  }

  .files-placeholder p {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 8px;
    color: #374151;
  }

  .files-placeholder span {
    font-size: 14px;
    color: #6b7280;
  }
</style>