---
interface Props {
  operario: {
    id: number;
    nombre: string;
    rol: string;
    usuario: string;
    email: string;
    created_at: string;
  };
}

const { operario } = Astro.props;

// Función para formatear fechas
function formatDate(dateString) {
  if (!dateString) return '-';
  return new Date(dateString).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
---

<div slot="general" class="detail-content">
  <div class="detail-grid">
    <div class="detail-section">
      <h3 class="section-title">Información Básica</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Nombre</label>
          <div class="info-value editable" data-field="nombre">{operario.nombre}</div>
        </div>
        <div class="info-item">
          <label class="info-label">ID del Sistema</label>
          <div class="info-value">{operario.id}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Email</label>
          <div class="info-value editable" data-field="email">{operario.email}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Fecha de Creación</label>
          <div class="info-value">{formatDate(operario.created_at)}</div>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h3 class="section-title">Rol y Acceso</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Rol</label>
          <div class="info-value">
            <span class={`rol-badge ${operario.rol?.toLowerCase()}`}>
              {operario.rol}
            </span>
          </div>
        </div>
        <div class="info-item">
          <label class="info-label">Usuario</label>
          <div class="info-value editable" data-field="usuario">{operario.usuario || '-'}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="progress" class="detail-content">
  <div class="progress-section">
    <h3 class="section-title">Información del Sistema</h3>
    
    <div class="system-overview">
      <div class="system-card">
        <div class="system-icon active">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="system-details">
          <span class="system-label">Estado</span>
          <span class="system-status">Activo</span>
        </div>
      </div>
      
      <div class="system-card">
        <div class="system-icon permissions">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
          </svg>
        </div>
        <div class="system-details">
          <span class="system-label">Permisos</span>
          <span class="system-status">Configurados</span>
        </div>
      </div>
      
      <div class="system-card">
        <div class="system-icon access">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="system-details">
          <span class="system-label">Último Acceso</span>
          <span class="system-status">Hoy</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="history" class="detail-content">
  <div class="history-section">
    <h3 class="section-title">Historial de Actividad</h3>
    
    <div class="history-items">
      <div class="history-item">
        <div class="history-avatar">SYS</div>
        <div class="history-content">
          <div class="history-header">
            <strong>Sistema</strong>
            <span class="history-action">creó operario</span>
            <span class="history-time">{formatDate(operario.created_at)}</span>
          </div>
          <p class="history-description">Operario {operario.nombre} registrado en el sistema</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="files" class="detail-content">
  <div class="files-section">
    <h3 class="section-title">Documentos del Operario</h3>
    
    <div class="files-upload">
      <button class="btn-upload">
        <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Subir Documento
      </button>
    </div>

    <div class="files-placeholder">
      <div class="placeholder-icon">
        <svg width="48" height="48" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <p>No hay documentos adjuntos</p>
      <span>Sube documentos relacionados con el operario</span>
    </div>
  </div>
</div>

<style>
  .rol-badge {
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
  }

  .rol-badge.administrador {
    background: #fee2e2;
    color: #991b1b;
  }

  .rol-badge.supervisor {
    background: #fef3c7;
    color: #92400e;
  }

  .rol-badge.operario {
    background: #dbeafe;
    color: #1d4ed8;
  }

  .rol-badge.consulta {
    background: #e5e7eb;
    color: #374151;
  }

  .system-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .system-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
  }

  .system-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .system-icon.active { background: linear-gradient(135deg, #10b981, #059669); }
  .system-icon.permissions { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
  .system-icon.access { background: linear-gradient(135deg, #f59e0b, #d97706); }

  .system-details {
    display: flex;
    flex-direction: column;
  }

  .system-label {
    font-size: 12px;
    color: #6b7280;
    font-weight: 500;
  }

  .system-status {
    font-size: 14px;
    font-weight: 600;
    color: #111827;
  }

  .files-placeholder {
    text-align: center;
    padding: 48px 24px;
    color: #6b7280;
  }

  .placeholder-icon {
    margin: 0 auto 16px;
    opacity: 0.5;
  }

  .files-placeholder p {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 8px;
    color: #374151;
  }

  .files-placeholder span {
    font-size: 14px;
    color: #6b7280;
  }
</style>