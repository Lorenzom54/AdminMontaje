<!-- Modal para Importar CSV -->
<Modal id="modal-import-csv" title="Importar Piezas desde CSV" size="xl">
  <form class="import-csv-form" id="import-csv-form">
    <div class="obra-selection">
      <h4>Seleccionar Obra de Destino</h4>
      <select name="obra_id" required class="form-input">
        <option value="">Seleccionar obra...</option>
